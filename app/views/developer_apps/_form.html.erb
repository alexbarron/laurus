<div class="flex items-center justify-center p-12">
    <div class="mx-auto w-full max-w-[550px]">
        <%= form_with model: @developer_app do |f| %>
            <% if @developer_app.errors.any? %>
                <div style="color: red">
                    <h2><%= pluralize(@developer_app.errors.count, "error") %> prohibited this from being saved:</h2>

                    <ul>
                    <% @developer_app.errors.each do |error| %>

<h3 class="mb-5 center text-2xl font-bold dark:text-white">Grants</h3>
<div class="mb-5">
    <% if user_signed_in? && current_user.platform_admin? %>
        <%= link_to "Manage Grants", "/developer_apps/#{@developer_app.id}/manage_grants", class: 'text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
    <% end %>
</div>
<% if @developer_app.grants.any? %>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Path
                </th>
                <th scope="col" class="px-6 py-3">
                    Method
                </th>
                <th scope="col" class="px-6 py-3">
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            <%= render @endpoints %>
        </tbody>
    </table>
</div>
<% else %>
    <p>This app has not been granted any endpoints.</p>
<% end %>

<%= render 'app_header' %>

<h3 class="mb-5 center text-2xl font-bold dark:text-white">Settings</h3>
<% if @current_user.platform_admin? || (@current_user_membership.active_admin? ) %>
    <div class="mb-5">
        <%= link_to "Edit App", edit_developer_app_path(@developer_app), class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
    
    <h4 class="text-2xl font-bold dark:text-white">Danger Zone</h4>
    <div class="mt-5">
    <% if @developer_app.archived_at? %>
        <%= link_to "Unarchive", unarchive_developer_app_path(@developer_app), class: "text-white bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-4 focus:ring-yellow-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:focus:ring-yellow-900", data: { "turbo-method": :put, turbo_confirm: "Are you sure?" } %>
    <% else %>
        <%= link_to "Archive", archive_developer_app_path(@developer_app), class: "text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900", data: { "turbo-method": :put, turbo_confirm: "Are you sure?" } %>
    <% end %>
    </div>
<% end %>

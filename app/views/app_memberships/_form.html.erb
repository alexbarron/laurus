<div class="flex items-center justify-center p-5">
  <div class="mx-auto w-full max-w-[550px]">
    <%= form_with scope: @app_membership, url: developer_app_app_membership_path(developer_app_id: @developer_app.id, id: @app_membership.id), method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="flex items-start mb-5">
      <div class="flex items-center h-5">
        <%= f.check_box :admin, class: "w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800" %>
      </div>
      <div class="ms-2 text-sm">
        <%= f.label :admin, "Make App Admin", class: "block text-sm font-medium text-gray-900 dark:text-white" %>
        <p class="text-xs font-normal text-gray-500 dark:text-gray-300">Admins can edit the developer app and manage members on the team.</p>
      </div>
      </div>
      <div>
        <%= f.submit "Submit", class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        <%= link_to "Cancel", developer_app_app_memberships_path(developer_app_id: @developer_app.id), class: 'dark:text-white' %>
      </div>
    <% end %>
  </div>
</div>
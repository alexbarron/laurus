<h3><%= @user.name %></h3>
<span><strong>Email: </strong><%= @user.email %></span>

<h4>Apps</h4>

<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Created</th>
    </tr>
    </thead>
<% @app_memberships.each do |app_membership| %>
    <tr>
        <td><%= link_to app_membership.developer_app.name, app_membership.developer_app %></td>
        <td><%= app_membership.admin? ? "Admin" : "Read-only" %></td>
        <td><%= app_membership.developer_app.created_at.strftime("%b %d, %Y") %></td>
    </tr>
<% end %>
</table>
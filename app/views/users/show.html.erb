<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

    <div class="flex flex-col items-center pb-10 px-4 pt-4">
        <%= image_tag "default_profile.webp", class: "w-24 h-24 mb-3 rounded-full shadow-lg"%>
        <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= @user.name %></h5>
        <span class="text-sm text-gray-500 dark:text-gray-400"><%= @user.email %></span>
        <div class="flex mt-4 md:mt-6">
            <a href="#" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Edit</a>
        </div>
    </div>
</div>


<h4 class="mb-5 center text-2xl font-bold dark:text-white">Apps</h4>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Role
                </th>
                <th scope="col" class="px-6 py-3">
                    Created
                </th>
            </tr>
        </thead>
        <tbody>
            <% @app_memberships.each do |app_membership| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= link_to app_membership.developer_app.name, app_membership.developer_app %></td>
                    <td class="px-6 py-4"><%= app_membership.admin? ? "Admin" : "Read-only" %></td>
                    <td class="px-6 py-4"><%= app_membership.developer_app.created_at.strftime("%b %d, %Y") %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<%= will_paginate @app_memberships %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "laurus", root_path, id: "logo" %>
    <nav>
    <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "My Apps", developer_apps_path %></li>
        <li><%= link_to "New App", new_developer_app_path %></li>
        <li><%= link_to "App Invitations", app_invitations_path %></li>
          <% if current_user.platform_admin? %>
            <li><%= link_to "Endpoints", endpoints_path %></li>
          <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "#{current_user.name}", current_user %></li>
        <li><%= link_to "Log Out", destroy_user_session_path, data: { "turbo-method": :delete } %></li>
      </ul>
    <% else %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Log In", new_user_session_path %></li>
    </ul>
    <% end %>
    </nav>
  </div>

  <% if user_signed_in? && current_user.platform_admin? %>
  <div id="admin-warning">
    <span>PLATFORM ADMIN MODE</span>
  </div>
  <% end %>

</header>
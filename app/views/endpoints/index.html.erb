<h3 class="center">Endpoints</h3>

<%= link_to "New Endpoint", new_endpoint_path, class: "btn btn-primary" %>

<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
    <th>Method</th>
    <th>Path</th>
    <th>Description</th>
    </tr>
    </thead>
<% @endpoints.each do |endpoint| %>
    <tr>
        <td><%= endpoint.method %></td>
        <td><%= link_to endpoint.path, endpoint %></td>
        <td><%= endpoint.description %></td>
    </tr>
<% end %>
</table>
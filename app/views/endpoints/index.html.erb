<h3 class="center">Endpoints</h3>

<%= link_to "New Endpoint", new_endpoint_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>

<%= will_paginate %>
<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
    <th>Method</th>
    <th>Path</th>
    <th>Description</th>
    </tr>
    </thead>
<% @endpoints.each do |endpoint| %>
    <tr>
        <td><%= endpoint.method %></td>
        <td><%= link_to endpoint.path, endpoint %></td>
        <td><%= endpoint.description %></td>
    </tr>
<% end %>
</table>
<%= will_paginate %>